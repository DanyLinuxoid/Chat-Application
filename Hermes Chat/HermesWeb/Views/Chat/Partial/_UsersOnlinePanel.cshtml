@using HermesModels.User
@model List<ChatUser>

<div class="chat-side-bar group-border">
    <h4 class="group-chat-header">People Online</h4>
    <div id="people-online">
        @for (int  i = 0; i < Model.Count; i++)
        {
        <div class="center">
            @Html.HermesImage(Model[i].AccountImage.Data, className: "person-avatar-S")
            <img src="~/images/status-green-circle.png" class="online-status" /> 
            <div class="group-chat-user">@Model[i].Username</div>
        </div>
        }
        <hr />
    </div>
</div>